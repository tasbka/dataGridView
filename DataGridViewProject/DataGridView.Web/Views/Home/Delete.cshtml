@using DataGridView.Entities2
@model CarModel

@{
    ViewData["Title"] = "Удаление автомобиля";
}

<div class="container mt-4">
    <h1>Удаление автомобиля</h1>
    <hr />

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Внимание!</h4>
        <p>Вы уверены, что хотите удалить автомобиль из системы проката?</p>
        <hr>
        <p class="mb-0"><strong>Марка:</strong> @Model.CarMake</p>
        <p class="mb-0"><strong>Госномер:</strong> @Model.AutoNumber</p>
        <p class="mb-0"><strong>Пробег:</strong> @Model.Mileage.ToString("N0") км</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mt-4">
            <button type="submit" class="btn btn-danger">Да, удалить</button>
            <a asp-action="Index" class="btn btn-secondary">Нет, отменить</a>
        </div>
    </form>
</div>