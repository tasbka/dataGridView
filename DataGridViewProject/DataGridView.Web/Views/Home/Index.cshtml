@using DataGridView.Entities2
@model DataGridView.Web.Models.IndexViewModel

@{
    ViewData["Title"] = "Прокат автомобилей";
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

<div class="container mt-4">
    <h1 class="mb-4">Управление автопарком</h1>

    <div class="d-flex gap-2 mb-4">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить автомобиль
        </a>
        <form asp-action="Index" method="get">
            <button type="submit" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-clockwise"></i> Обновить
            </button>
        </form>
    </div>

    <div class="card mb-4">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Марка</th>
                        <th>Госномер</th>
                        <th>Пробег (км)</th>
                        <th>Расход (л/час)</th>
                        <th>Топливо (л)</th>
                        <th>Запас хода (час)</th>
                        <th>Стоимость (руб/мин)</th>
                        <th>Сумма аренды (руб)</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model.Cars)
                    {
                        var fuelReserveHours = car.FuelConsumption > 0 ? car.CurrentFuelVolume / car.FuelConsumption : 0;
                        var rentAmount = fuelReserveHours * 60 * car.RentCostPerMinute;

                            <tr>
                                <td>
                                @switch (car.CarMake)
                                {
                                    case CarMake.Hyundai:
                                     <span class="badge bg-secondary">Хёндай Крета</span>
                                        break;
                                    case CarMake.Lada:
                                      <span class="badge bg-secondary">Лада Веста</span>
                                        break;
                                    case CarMake.Mitsubishi:
                                     <span class="badge bg-secondary">Митсубиси Аутлендер</span>
                                        break;
                                    default:
                                     <span class="badge bg-secondary">Неизвестно</span>
                                        break;
                                }
                                </td>
                                <td><strong>@car.AutoNumber</strong></td>
                                <td>@car.Mileage.ToString("N0")</td>
                                <td>@car.FuelConsumption.ToString("F1")</td>
                                <td>
                                @if (car.CurrentFuelVolume < 7)
                                {
                                            <span class="badge bg-warning">@car.CurrentFuelVolume.ToString("F1")</span>
                                }
                                else
                                {
                                    @car.CurrentFuelVolume.ToString("F1")
                                }
                                </td>
                                <td>@fuelReserveHours.ToString("F1")</td>
                                <td>@car.RentCostPerMinute.ToString("F2")</td>
                                <td>
                                    <span class="badge bg-info">@rentAmount.ToString("F2")</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@car.Id" 
                                           class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@car.Id" 
                                           class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-5 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h6 class="card-title mb-2">Всего автомобилей</h6>
                    <h2 class="card-text mb-0">@Model.Statistics.TotalCars</h2>
                </div>
            </div>
        </div>
        <div class="col-md-5 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h6 class="card-title mb-2">Низкий уровень топлива</h6>
                    <h2 class="card-text mb-0">@Model.Statistics.LowFuelCars</h2>
                </div>
            </div>
        </div>
    </div>
</div>

